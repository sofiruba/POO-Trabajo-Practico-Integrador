CREATE DATABASE plataforma_cursos;
USE plataforma_cursos;

CREATE TABLE usuarios (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nombre VARCHAR(100),
  email VARCHAR(100),
  contrasena VARCHAR(100),
  tipo VARCHAR(20)
);

CREATE TABLE cursos (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nombre VARCHAR(100),
  descripcion TEXT,
  cupo INT,
  estado VARCHAR(20)
);
